{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "constructor-super": [
            "error",
            "always"
        ],
        "getter-return": [
            "error",
            "always"
        ],
        "no-debugger": [
            "warning",
            "always"
        ],
        "no-alert": [
            "warning",
            "always"
        ],
        "no-catch-shadow": [
            "warning",
            "always"
        ],
        "no-empty": [
            "warning",
            "always"
        ]
        
    }
}
